@model Producto

<h1>Registro de Producto</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
            <label>Foto: </label>
            <input asp-for="Foto">
    </div>
    <div class="form-group">
        <label asp-for="DescripcionCorta"></label>
        <textarea asp-for="DescripcionCorta" rows="3" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DescripcionLarga"></label>
        <textarea asp-for="DescripcionLarga" rows="10" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="CategoriaId" class="form-control">
            @foreach (var item in (List<Categoria>)ViewBag.Categorias)
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control">
    </div>

    <button class="btn btn-primary">Registrar</button>
</form>