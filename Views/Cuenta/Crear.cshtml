@model Usuario

<h1>Crear cuenta de usuario</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control">
    </div>

    
     <div class="form-group">
        <label asp-for="Genero"></label>
        <select asp-for="Genero" class="form-control">
            <option value="Femenino">Femenino</option> 
            <option value="Masculino">Masculino</option>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password1"></label>
        <input asp-for="Password1" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password2"></label>
        <input asp-for="Password2" class="form-control">
    </div>    

    <button class="btn btn-primary">Registrar</button>

</form>